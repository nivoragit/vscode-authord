{
  "name": "vscode-writerjet",
  "displayName": "vscode-writerjet",
  "description": "**`vscode-writerjet`** is a versatile Visual Studio Code extension designed to streamline writing and documentation workflows. It provides a flexible configuration system for managing structured content and enhances productivity with intuitive tools tailored for technical writers, developers, and content creators.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Your Extension Settings",
      "properties": {
        "writerjet.topics": {
          "type": "array",
          "default": [],
          "description": "List of topics to display in the Tree View."
        }
      }
    },
    "commands": [
      {
        "command": "writerjet.showPreview",
        "title": "Show Markdown Preview"
      },
      {
        "command": "writerjet.readConfig",
        "title": "Read Configuration"
      },
      {
        "command": "writerjet.sayHello",
        "title": "Say Hello"
      },
      {
        "command": "writerjet.refreshTopics",
        "title": "Refresh Topics"
      },
      {
        "command": "writerjet.openTopic",
        "title": "Open Topic"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "writerjet.topicTreeView",
          "name": "Topics"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "writerjet.openTopic",
          "when": "view == writerjet.topicTreeView && viewItem == topicItem",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nivoragit/writerjet-writerjet.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "remark": "^14.0.3",
    "remark-gfm": "^3.0.0",
    "remark-html": "^15.0.2",
    "remark-html-katex": "^1.0.0",
    "remark-math": "^5.0.0",
    "unified": "^10.0.0",
    "unist-util-visit": "^4.0.0"
  }
}
